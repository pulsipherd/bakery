<!DOCTYPE html>
<html>
  <head>
    <title>Bakery</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
  <nav>
    <div class="nav-wrapper">
      <a href="/" class="brand-logo">Bakery Recipes</a>
      <ul id="nav-mobile" class="right hide-on-med-and-down">
      <li><%= link_to  "Recipes", recipes_path %></li>
      <li><%= link_to 'Ingredients', ingredients_path%></li>
      <li><%= link_to 'Add ingredient to recipe', new_recipe_ingredient_path%></li>
      </ul>
    </div>
  </nav>
  <% flash.each do |key, value| %>
    <div class ="flash <%= key %>">
    <%= value %>
    </div>
    <% end %>

    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
